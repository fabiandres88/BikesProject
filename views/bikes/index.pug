extends ../layout

block content
  a(href='/bikes/create') New Bike

  table.table
    thead
      tr
        th(scope="col") #
        th(scope="col") Color
        th(scope="col") Model
        th(scope="col") Location
        th(scope="col")
        th(scope="col")
    tbody
      each bike in bikes
        tr
          td(scope="row")
            = bike._id
          td= bike.color
          td= bike.modelo
          td= bike.location
          td
            a(href='bikes/' + bike._id + '/update') Edit
          td
            form.inline(method='post' action='bikes/' + bike._id + '/delete')
                input(type="hidden" name='id' value= bike._id)
                button.link-button(type='submit' name='submit_param' value='submit_value' class='btn')
                    = 'Delete'